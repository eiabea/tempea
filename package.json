{
  "name": "tempea",
  "version": "0.4.0",
  "description": "Node.js application for controlling room temperature via raspberry pi",
  "main": "index.js",
  "private": true,
  "scripts": {
    "precommit": "npm run lint",
    "start": "node index.js | ${NODE_PATH:-node_modules}/.bin/bunyan -o short",
    "start:dev": "${NODE_PATH:-node_modules}/.bin/nodemon index.js",
    "start:dev:pretty": "${NODE_PATH:-node_modules}/.bin/nodemon index.js | ${NODE_PATH:-node_modules}/.bin/bunyan -o short",
    "lint": "${NODE_PATH:-node_modules}/.bin/eslint --fix .",
    "test": "CI=true ${NODE_PATH:-node_modules}/.bin/nyc ${NODE_PATH:-node_modules}/.bin/_mocha --color --exit test/**/*.test.js",
    "codecov": "${NODE_PATH:-node_modules}/.bin/nyc report --reporter=text-lcov > coverage.lcov && ${NODE_PATH:-node_modules}/.bin/codecov"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/eiabea/tempea-api"
  },
  "author": "eiabea",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/eiabea/tempea-api"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "bunyan": "^1.8.12",
    "chai": "^4.2.0",
    "cors": "^2.8.5",
    "cron": "^1.6.0",
    "ds18b20": "^0.1.0",
    "express": "^4.16.4",
    "express-rate-limit": "^3.3.2",
    "google-auth-library": "^2.0.2",
    "googleapis": "^36.0.0",
    "helmet": "^3.15.1",
    "influxdb-nodejs": "^2.11.0",
    "jsonwebtoken": "^8.4.0",
    "moment": "^2.24.0",
    "onoff": "^3.2.7",
    "request": "^2.88.0"
  },
  "devDependencies": {
    "chai-http": "^4.2.1",
    "codecov": "^3.2.0",
    "eslint": "^5.14.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-chai": "^0.0.1",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-mocha": "^5.3.0",
    "gaxios": "^1.7.0",
    "husky": "^1.3.1",
    "mocha": "^5.2.0",
    "mocked-env": "^1.2.4",
    "nock": "^10.0.6",
    "node-mocks-http": "^1.7.3",
    "nodemon": "^1.18.10",
    "null-logger": "^1.0.0",
    "nyc": "^13.3.0",
    "proxyquire": "^2.1.0",
    "sinon": "^7.2.4"
  }
}
